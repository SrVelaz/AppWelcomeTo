<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor a convertir: "
        android:textSize="30sp"
        android:id="@+id/textView"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"

        android:text="1"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"

        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView"
        android:inputType="number"
        android:imeOptions="actionDone"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/miSpinner_ID"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/miSpinner_ID"
        android:orientation="vertical"
        android:background="@android:color/holo_blue_dark"
        >



        <TextView
            android:text="metro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:id="@+id/metro_id" />

        <TextView
            android:text="decimetro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:id="@+id/decimetro_id" />



        <TextView
            android:text="centimetro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:id="@+id/centimetro_id" />

        <TextView
            android:text="milimetro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:id="@+id/milimetro_id" />


        <TextView
            android:text="micrometro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:id="@+id/micrometro_id" />

        <TextView
            android:text="nanometro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:id="@+id/nanometro_id" />
        <TextView
            android:text="picometro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:id="@+id/picometro_id" />

        <TextView
            android:text="decametro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/decametro_id" />


        <TextView
            android:text="hectometro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/hectometro_id" />

        <TextView
            android:text="kilometro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/kilometro_id" />

    </LinearLayout>

</RelativeLayout>
