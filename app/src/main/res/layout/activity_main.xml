<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/material_blue_grey_950">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cabecera"
        android:layout_marginTop="40dp"

        />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginTop="40dp">

        <Button
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/botonEncuestaID"
            android:layout_rowSpan="2"
            android:background="@drawable/boton_personalizado_1"
            android:gravity="fill_horizontal"
            android:onClick="pulsarBotonEncuesta"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_columnSpan="2"
            android:id="@+id/botonUnidadesID"
            android:background="@drawable/boton_unidades"
            android:layout_marginTop="20dp"
            android:onClick="pulsarBotonUnidades"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:id="@+id/botonInfoID"
            android:layout_gravity="bottom"
            android:background="@drawable/boton_info"
            android:layout_marginBottom="20dp"
            android:onClick="pulsarBotonInfo"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:background="@drawable/boton_interrogante"
            android:id="@+id/botonInterroganteID"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:onClick="pulsarBotonInterrogante"/>
    </GridLayout>



</LinearLayout>
